<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainPagefitness"
    tools:ignore="ExtraText">






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            >

            <ImageView
                android:id="@+id/imageView2"
                style="@style/SoftCorner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/pngimage1" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/fitnessTrackerbmi"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/lightwhite">

            <ImageView
                android:id="@+id/fitnesstracker"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/undraw_fitness_tracker_3033" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColorHighlight="@color/blue"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:text="Fitness Tracker"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fitnessstate"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/lightwhite">


            <ImageView
                android:id="@+id/fitnessstateimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/fitnessstats" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColorHighlight="@color/blue"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:text="Fitness State "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:textSize="16dp"

                android:textColorHighlight="@color/blue"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:text="Pedometer "/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/joggingcard"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/lightwhite">

            <ImageView
                android:id="@+id/joggingimage"
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/jogging" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColorHighlight="@color/blue"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:text="Jogging"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/yogacard"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/lightwhite">


            <ImageView
                android:id="@+id/yoga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/yoga" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColorHighlight="@color/blue"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:text="Yoga"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>








</LinearLayout>